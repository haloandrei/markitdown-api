{
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.12",
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "routes": [
    { "src": "/process_file", "dest": "/api/index.py" },
    { "src": "/docs",         "dest": "/api/index.py" },
    { "src": "/(.*)",         "dest": "/api/index.py" }
  ]
}
